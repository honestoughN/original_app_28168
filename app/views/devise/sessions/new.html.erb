<%= render "shared/header" %>
<main class="main">
  <div class="sign-up-box">
    <%= form_with model: @user, url: user_session_path, local: true do |f| %>
      <div>
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "sign-up-box-list", placeholder: "Emailを入力してください" %>
      </div>
      <div>
        <%= f.label :password, "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "off", class: "sign-up-box-list", placeholder: "パスワードを入力してください" %>
      </div>
      <div class="button">
        <%= f.submit "ログイン", class: "sign-up-button" %>
      </div>
    <% end %>
  </div>
</main>
<%= render "shared/footer" %>