<%= render "shared/header" %>
<main class="main">
  <div class="sign-up-box">
    <div>
      <P>ニックネーム：<%= @nickname %></p>
    </div>
    <div>
      <p>Email：<%= @email %></p>
    </div>
    <div>
      <p>&lt; 投稿した記事一覧 &gt;</p>
      <ul>
        <% @hearts.each do |heart| %>
          <%= link_to heart_path(heart.id), method: :get do %>
          <li class="heart-list">
            <div class="heart-list-main">
              <p class="heart-title"><%= heart.title %>      <span class="good-point">⭐️<%= heart.likes.count %></span></p>
              <p class="heart-child-category"><%= heart.category.name %></p>
            </div>
            <p class="heart-nickname"><%= heart.user.nickname %></p>
          </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</main>
<%= render "shared/footer" %>
